<%- title "Sign in" %>

<%= flash_messages %>

<div class="col-md-4">
  <h3>Please sign in</h3>
  <%= form_for :session, url: sessions_path do |f| %>
    <div class="form-group">
      <%= f.text_field :email, :placeholder => "Email address", :autofocus => true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, :placeholder => "Password", class: "form-control"  %>
    </div>

     <div class="form-group">
      <%= f.submit  :class=> "btn btn-primary", :value => "Sign in" %>
    </div>
  </form>
  <% end %>
</div>